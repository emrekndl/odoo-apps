<odoo>
  <data noupdate="1">
    <record id="mail_template_return_thanks" model="mail.template">
      <field name="name">Return Thank You</field>
      <field name="model_id" ref="library_management.model_library_loan"/>
      <field name="email_from">${(user.email_formatted or '')|safe}</field>
      <field name="email_to">${object.member_id.user_id.email|safe}</field>
      <field name="subject">Thanks for returning “${object.book_id.name}”!</field>
      <field name="body_html"><![CDATA[
        <p>Dear ${object.member_id.name},</p>
        <p>Thank you for returning the book <strong>${object.book_id.name}</strong> after 
           <strong>${object.days_taken}</strong> days.</p>
        <p>We hope you enjoyed reading it!</p>
      ]]></field>
    </record>
  </data>
</odoo>

