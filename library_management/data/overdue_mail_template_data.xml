<odoo>
  <data noupdate="1">
    <record id="mail_template_overdue_reminder" model="mail.template">
      <field name="name">Overdue Loan Reminder</field>
      <field name="model_id" ref="library_management.model_library_loan"/>
      <field name="email_from">${(user.email_formatted or '')|safe}</field>
      <field name="email_to">${object.member_id.user_id.email|safe}</field>
      <field name="subject">Loan Overdue: ${object.book_id.name}</field>
      <field name="body_html"><![CDATA[
        <p>Dear ${object.member_id.name},</p>
        <p>Your loan for the book <strong>${object.book_id.name}</strong> was due on 
           <strong>${object.return_date}</strong> and is now overdue.</p>
        <p>Please return it as soon as possible.</p>
      ]]></field>
    </record>
  </data>
</odoo>

